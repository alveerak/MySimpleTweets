<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <ImageView
        android:id="@+id/userPic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_profile"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/followerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/followingCount"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="30dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="134dp" />

    <TextView
        android:id="@+id/followingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/likesCount"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="153dp" />

    <TextView
        android:id="@+id/likesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userHandle"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="172dp" />

    <TextView
        android:id="@+id/userHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userPic"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="163dp"
        android:textSize="30dp"
        tools:layout_editor_absoluteY="191dp" />

    <ImageView
        android:id="@+id/xButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/x"
        android:onClick="onCloseCompose"/>

    <TextView
        android:id="@+id/numTweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_below="@+id/followerCount"
        android:layout_centerHorizontal="true"
        android:text="TextView" />
</RelativeLayout>